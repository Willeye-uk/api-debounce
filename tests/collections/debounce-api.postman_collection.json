          "protocol": "http",
          "host": ["localhost"],
          "port": "8500",
          "path": ["api", "in", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Response has error status', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('error');",
              "});",
              "pm.test('Error message mentions missing parameter', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include('Missing');",
              "});"
            ]
          }
        }
      ]
    },
